{
  "compilerOptions": {
    "noImplicitAny": false,//不需要显示的声明变量的any类型
    "target": "es5",// 编译后的js版本，es6,es7
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,//允许混合编译js文件
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",//决定编译器的工作方式
    "resolveJsonModule": true,
    "isolatedModules": true,//编译器会把每一文件作为模块来使用
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
