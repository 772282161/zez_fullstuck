<!--pages/index/index.wxml-->
<view class="main">
<swiper indicator-active-color="#fff" autoplay="true" circular="true" indicator-dots="true" duration="{{duration}}" interval="{{interval}}">
<block wx:for="{{imgUrls}}" wx:key="index">
  <swiper-item>
    <image class="slide-image" src="{{item}}"></image>
  </swiper-item>
</block>

</swiper>

